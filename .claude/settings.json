{
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(fvm flutter pub get:*)",
      "Bash(fvm flutter analyze:*)",
      "Bash(fvm dart run:*)",
      "Bash(git commit:*)",
      "Bash(git add:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(curl:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/ensure-fvm.sh",
            "timeout": 300,
            "statusMessage": "Checking FVM installation..."
          }
        ]
      }
    ]
  }
}
